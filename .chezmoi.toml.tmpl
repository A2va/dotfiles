
# Select software groups to install
{{- $selectedSoftwareGroupsMessage := print
  "Which groups of packages do you want to install?\n" 
  "  core  - Essential tools like Git, VS Code, Terminal\n"
  "  dev   - Developer tools like xmake, uv\n"
  "  cli   - CLI enhancements like zoxide, bat, eza\n"
  "  tool  - Miscellaneous tools (e.g. vhs, wget, typst)\n"
-}}
{{- $allSoftwareGroups := list "core" "dev" "cli" "tool" -}}
{{- $defaultSoftwareGroups := list "core" -}}
{{- $selectedSoftwareGroups := promptMultichoice $selectedSoftwareGroupsMessage $allSoftwareGroups $defaultSoftwareGroups -}}

[data]
selected_software_groups = {{ $selectedSoftwareGroups | toToml }}
